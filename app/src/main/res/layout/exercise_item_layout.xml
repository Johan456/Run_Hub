<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ex_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imV_exerciseIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_run_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/date_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Date:"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/date_text"
            app:layout_constraintStart_toEndOf="@+id/imV_exerciseIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="01/01/2021"
            android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@id/date_text_1"
            app:layout_constraintTop_toTopOf="@id/date_text_1" />

        <TextView
            android:id="@+id/distance_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="155dp"
            android:text="Distance in KM:"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/date_text_1"
            app:layout_constraintTop_toTopOf="@id/date_text_1" />

        <TextView
            android:id="@+id/distance_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="15dp"
            android:text="13km"
            android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@id/distance_text_1"
            app:layout_constraintTop_toTopOf="@id/date_text_1" />

        <TextView
            android:id="@+id/avg_speed_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avg. Speed:"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/date_text_1"
            app:layout_constraintTop_toBottomOf="@id/date_text_1" />

        <TextView
            android:id="@+id/avg_speed_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="1.2"
            android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@id/avg_speed_text_1"
            app:layout_constraintTop_toTopOf="@+id/avg_speed_text_1" />

        <TextView
            android:id="@+id/calBurned_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calories Burned:"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/distance_text_1"
            app:layout_constraintTop_toTopOf="@id/avg_speed_text_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="111"
            android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@id/calBurned_text_1"
            app:layout_constraintTop_toTopOf="@id/avg_speed_text_1" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>